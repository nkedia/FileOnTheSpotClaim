<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.app.fileonthespotclaim.DriverDetailsActivity" 
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="520dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/dd_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/next" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:text="@string/name" />

    <TextView
        android:id="@+id/relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_below="@+id/name"
        android:layout_marginTop="14dp"
        android:text="@string/relation" />

    <TextView
        android:id="@+id/driverAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relation"
        android:layout_alignStart="@+id/relation"
        android:layout_below="@+id/relation"
        android:layout_marginTop="16dp"
        android:text="@string/driverAddress" />

    <TextView
        android:id="@+id/contactNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/driverAddress"
        android:layout_alignStart="@+id/driverAddress"
        android:layout_below="@+id/driverAddress"
        android:layout_marginTop="20dp"
        android:text="@string/contactNumber" />

    <TextView
        android:id="@+id/dobLicense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/contactNumber"
        android:layout_alignStart="@+id/contactNumber"
        android:layout_below="@+id/contactNumber"
        android:layout_marginTop="17dp"
        android:text="@string/dobLicense" />

    <TextView
        android:id="@+id/expiryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/effectiveFrom"
        android:layout_alignStart="@+id/effectiveFrom"
        android:layout_below="@+id/effectiveFrom"
        android:layout_marginTop="14dp"
        android:text="@string/expiryDate" />

    <TextView
        android:id="@+id/vehicleClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/expiryDate"
        android:layout_alignStart="@+id/expiryDate"
        android:layout_below="@+id/expiryDate"
        android:layout_marginTop="16dp"
        android:text="@string/vehicleClass" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/driverAddress"
        android:layout_alignLeft="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:ems="10"
        android:text="self"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/contactNumber"
        android:layout_alignBottom="@+id/contactNumber"
        android:layout_alignEnd="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:ems="10"
        android:text="8008288109"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText4"
        android:layout_alignStart="@+id/editText4"
        android:layout_alignTop="@+id/dobLicense"
        android:ems="10"
        android:text="1985-10-10"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/effectiveFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/issuingRTO"
        android:layout_alignStart="@+id/issuingRTO"
        android:layout_below="@+id/editText7"
        android:layout_marginTop="16dp"
        android:text="@string/effectiveFrom" />

    <TextView
        android:id="@+id/issuingRTO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dlNo"
        android:layout_alignStart="@+id/dlNo"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="14dp"
        android:text="@string/issuingRTO" />

    <TextView
        android:id="@+id/dlNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText6"
        android:layout_alignLeft="@+id/dobLicense"
        android:layout_alignStart="@+id/dobLicense"
        android:text="@string/dlNo" />

    <TextView
        android:id="@+id/driverType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/vehicleClass"
        android:layout_alignStart="@+id/vehicleClass"
        android:layout_below="@+id/vehicleClass"
        android:layout_marginTop="24dp"
        android:text="@string/driverType" />

    <Spinner
        android:id="@+id/vehicleClassSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/vehicleTypeSpinner"
        android:layout_alignLeft="@+id/vehicleTypeSpinner"
        android:layout_below="@+id/editText9"
        android:entries="@array/classArray"
        android:prompt="@string/classPrompt" />

    <Spinner
        android:id="@+id/vehicleTypeSpinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/driverType"
        android:layout_toRightOf="@+id/editText9"
        android:entries="@array/typeArray" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contactNumber"
        android:layout_alignLeft="@+id/editText2"
        android:layout_toEndOf="@+id/driverType"
        android:layout_toRightOf="@+id/driverType"
        android:ems="10"
        android:text="Agate 104"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText5"
        android:layout_below="@+id/editText5"
        android:ems="10"
        android:text="Lic123"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:layout_alignTop="@+id/effectiveFrom"
        android:layout_toRightOf="@+id/relation"
        android:ems="10"
        android:text="2000-10-10"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText8"
        android:layout_alignLeft="@+id/editText8"
        android:layout_below="@+id/editText8"
        android:layout_toRightOf="@+id/issuingRTO"
        android:ems="10"
        android:text="2020-10-10"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignLeft="@+id/vehicleClassSpinner"
        android:layout_toEndOf="@+id/driverType"
        android:ems="10"
        android:text="Natasha Kedia"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/dd_next"
        android:layout_alignTop="@+id/issuingRTO"
        android:layout_toEndOf="@+id/editText6"
        android:ems="10"
        android:text="RTO"
        android:textSize="10dp" />
    
</RelativeLayout>

</ScrollView>
