<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="540dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.app.fileonthespotclaim.PolicyHolderDetailsActivity" >

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/period"
            android:layout_alignStart="@+id/period"
            android:layout_below="@+id/period"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="@string/from" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/period"
            android:layout_alignStart="@+id/period"
            android:layout_below="@+id/to"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:text="@string/nameInsured" />

        <TextView
            android:id="@+id/pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/address"
            android:layout_alignStart="@+id/address"
            android:layout_below="@+id/address"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:text="@string/pin" />

        <TextView
            android:id="@+id/phoneOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/pin"
            android:layout_alignStart="@+id/pin"
            android:layout_below="@+id/pin"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:text="@string/phoneOff" />

        <TextView
            android:id="@+id/policyNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
             android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:text="@string/policyNo" />
        
        <TextView
            android:id="@+id/coverNoteNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/period"
            android:layout_alignStart="@+id/period"
            android:layout_below="@+id/policyNo"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="@string/coverNoteNo" />
        
        <TextView
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/coverNoteNo"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="@string/period" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:text="@string/dob" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dob"
            android:layout_alignStart="@+id/dob"
            android:layout_below="@+id/dob"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:text="@string/address" />

        <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/from"
            android:layout_alignStart="@+id/from"
            android:layout_below="@+id/from"
            android:ems="10"
            android:text="@string/to" />

        <TextView
            android:id="@+id/phoneRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/phoneOff"
            android:layout_alignStart="@+id/phoneOff"
            android:layout_below="@+id/phoneOff"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:text="@string/phoneRes" />

        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/phoneRes"
            android:layout_alignStart="@+id/phoneRes"
            android:layout_below="@+id/phoneRes"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:text="@string/mobile" />

        

        

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mobile"
            android:layout_alignStart="@+id/mobile"
            android:layout_below="@+id/mobile"
            android:ems="10"
            android:text="@string/email" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/phd_next"
            android:layout_alignLeft="@+id/editText8"
            android:layout_alignRight="@+id/phd_next"
            android:layout_alignStart="@+id/editText8"
            android:layout_centerVertical="true"
            android:ems="10"
            android:inputType="textPostalAddress"
            android:text="Flat 504, My Home Jewel, Madinaguda, Hyderabad"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Natasha Kedia"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/policyNo"
            android:layout_alignBottom="@+id/policyNo"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:text="84321"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/coverNoteNo"
            android:layout_alignBottom="@+id/coverNoteNo"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4"
            android:ems="10"
            android:text="923874"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/from"
            android:layout_alignLeft="@+id/editText5"
            android:layout_alignStart="@+id/editText5"
            android:ems="10"
            android:text="2014-07-08"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/to"
            android:layout_alignBottom="@+id/to"
            android:layout_alignLeft="@+id/editText6"
            android:layout_alignStart="@+id/editText6"
            android:ems="10"
            android:text="2015-07-08"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/address"
            android:layout_alignLeft="@+id/editText7"
            android:layout_alignStart="@+id/editText3"
            android:ems="10"
            android:text="1984-07-08"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/pin"
            android:layout_alignBottom="@+id/pin"
            android:layout_alignLeft="@+id/editText8"
            android:layout_alignStart="@+id/editText8"
            android:ems="10"
            android:text="500049"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText9"
            android:layout_alignStart="@+id/editText9"
            android:layout_below="@+id/pin"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/phoneRes"
            android:layout_alignBottom="@+id/phoneRes"
            android:layout_alignLeft="@+id/editText10"
            android:layout_alignStart="@+id/editText10"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mobile"
            android:layout_alignLeft="@+id/editText11"
            android:layout_alignStart="@+id/editText11"
            android:ems="10"
            android:inputType="phone"
            android:text="8008288109"
            android:textSize="10dp" />

        <Button
            android:id="@+id/phd_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/next" />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText11"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/editText11"
            android:layout_alignTop="@+id/mobile"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="natasha@gmail.com"
            android:textSize="10dp" />
    </RelativeLayout>

</ScrollView>